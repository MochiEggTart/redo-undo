{
  "compilerOptions": {
    "incremental": true,            
    "target": "es5",                
    "module": "commonjs",           
    "declaration": true,            
    "outDir": "dist",                
    "esModuleInterop": true,        
    "skipLibCheck": true,           
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}